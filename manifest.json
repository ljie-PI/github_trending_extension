{
  "manifest_version": 3,
  "name": "GitHub Trending",
  "version": "1.0",
  "description": "A browser extension that displays trending GitHub repositories with GitHub-style UI.",
  "permissions": [
    "storage"
  ],
  "action": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://github.com/*"
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
